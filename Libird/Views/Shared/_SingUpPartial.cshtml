@model Libird.Models.Domain.User
@RenderBody()
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bem-vindo ao Libird</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome-free-5.15.1-web/css/all.css" />
    <link rel="stylesheet" href="/css/singup.css">
</head>
<body>
    <div class="card login-screen">
        <div class="card-body">
            <form asp-action="SingUp" method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" type="text" class="form-control" placeholder="Name">
                </div>
                <div class="form-group">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" type="text" class="form-control" placeholder="Last Name">
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Email">
                </div>
                <div class="form-group">
                    <p>Account</p>
                    <label asp-for="Account.UserName"></label>
                    <input asp-for="Account.UserName" type="text" class="form-control" placeholder="User Name">
                </div>
                <div class="form-group">
                    <label asp-for="Account.Password"></label>
                    <input asp-for="Account.Password" type="password" class="form-control" placeholder="Password">
                </div>
                <button type="submit" class="btn btn-primary btn-block">Sing Up</button>
            </form>
            <p>Already have an account?<a asp-action="SingIn">SingIn</a></p>
        </div>
    </div>
</body>
</html>
