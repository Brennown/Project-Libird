<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bem-vindo ao Libird</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome-free-5.15.1-web/css/all.css" />
    <link rel="stylesheet" href="/css/site.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/logo.png" /></a>
                @if (User.Identity.IsAuthenticated)
                {
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav flex-grow-1 justify-content-center">
                            <li class="nav-item">
                                <a class="nav-link icons-link" title="Home" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link icons-link" title="Library" asp-area="" asp-controller="Library" asp-action="Index"><i class="fas fa-bookmark"></i></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link icons-link" title="Add New Book" asp-area="" asp-controller="AddBook" asp-action="Index"><i class="fas fa-plus-square"></i></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link icons-link" title="Collection" asp-area="" asp-controller="Home" asp-action=""><i class="fas fa-book"></i></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link icons-link" title="Profile" asp-area="" asp-controller="Home" asp-action=""><i class="fas fa-user"></i></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link icons-link" title="Favorite" asp-area="" asp-controller="Home" asp-action=""><i class="fas fa-heart"></i></a>
                            </li>
                        </ul>
                    </div>
                    <div class="dropdown">
                        <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            @User.Identity.Name
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                            <a class="dropdown-item" asp-action="LogOut" asp-controller="Input" asp-cotype="button">Exit</a>
                        </div>
                    </div>
                }
                else
                {
                    <a asp-action="SignIn" asp-controller="Input" class="btn btn-primary login-link">Login</a>
                    <a asp-action="SignUp" asp-controller="Input" class="btn btn-success">Create Your Account</a>
                }
            </div>
        </nav>
    </header>
    <main>
        @RenderBody()
    </main>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
