@model Libird.Models.Domain.Account
@RenderBody()
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bem-vindo ao Libird</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome-free-5.15.1-web/css/all.css" />
    <link rel="stylesheet" href="/css/singin.css">
</head>
<body>
    <div class="container">
        <img src="~/img/logo-whitepng.png">
        <h2>Welcome to Libird</h2>
    </div>
    <div class="card login-screen">
        <div class="card-body">
            <form asp-action="SingIn" method="post">
                <div class="form-group">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" type="text" class="form-control" placeholder="User Name">
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                </div>
                <button type="submit" class="btn btn-primary btn-block">Sing In</button>
            </form>
            <p>Not have an account yet ??<a asp-action="SingUp">SingUp</a></p>
        </div>
    </div>
</body>
</html>
