<div id="banner">
    <h1 class="display-4">Welcome, @User.Identity.Name</h1>
</div>
<div class="mt-4 container">
    <h3 class="text-center">Browse Your Virual Library :)</h3>

    <div class="card-deck mt-5 justify-content-center">

        <a asp-controller="Library" asp-action="Index" class="link-card">
            <div class="card">
                <div class="card-body">
                    <div class="container">
                        <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-book" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
