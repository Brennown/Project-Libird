@model Libird.Models.ViewModels.Library

@if (Model.Books.Count == 0)
{
    <partial name="_NoneBookPartial" />
}
else
{
    <table class="table table-striped table-bordered table-hover">
        <thead style="background-color:#0094ff; color:white; text-align:center">
            <tr>
                <th>
                    <span>Code</span>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Book.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Book.SubTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Book.NumberPage)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Book.NumberEdition)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Book.Genre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Book.Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Book.Read)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Book.Borrowed)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Book.Author.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Book.Author.LastName)
                </th>
                <th>
                    <span>Edit</span>
                </th>
                <th>
                    <span>Delete</span>
                </th>
            </tr>
        </thead>
        <tfoot></tfoot>
        <tbody>
            @foreach (var item in Model.Books)
            {
                Model.Code += 1;
                <tr>
                    <td>
                        <span>@Model.Code</span>
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.SubTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.NumberPage)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.NumberEdition)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Genre)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Type)
                    </td>
                    <td>
                        @Html.CheckBoxFor(model => item.Read)
                    </td>
                    <td>
                        @Html.CheckBoxFor(model => item.Borrowed)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Author.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Author.LastName)
                    </td>
                    <td>
                        <a class="link-edit" asp-action="Edit" asp-route-id="@item.BookId">
                            <svg width="1.1em" height="1.1em" viewBox="0 0 16 16" class="bi bi-pencil-square" fill="#24BFA5" xmlns="http://www.w3.org/2000/svg">
                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                            </svg>
                        </a>
                    </td>
                    <td>
                        <a class="link-delete" asp-action="Delete" asp-route-id="@item.BookId">
                            <svg width="1.1em" height="1.1em" viewBox="0 0 16 16" class="bi bi-trash" fill="red" xmlns="http://www.w3.org/2000/svg">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                            </svg>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}