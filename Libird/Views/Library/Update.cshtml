@model Libird.Models.Domain.Book
<div class="container">
    <h4 class="display-4 text-center">Update book</h4>
    <div>
        <form asp-action="Update" method="post">

            <input type="hidden" asp-for="BookId" />

            <div class="row">
                <div class="form-group col">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" />
                </div>

                <div class="form-group col">
                    <label asp-for="SubTitle"></label>
                    <input asp-for="SubTitle" class="form-control" />
                </div>
            </div>

            <div class="row">
                <div class="form-group col">
                    <label asp-for="NumberPage"></label>
                    <input asp-for="NumberPage" class="form-control" />
                </div>

                <div class="form-group col">
                    <label asp-for="NumberEdition"></label>
                    <input asp-for="NumberEdition" class="form-control" />
                </div>


            </div>

            <div class="form-group">
                <label asp-for="Genre"></label>
                <input asp-for="Genre" class="form-control" />
            </div>


            <div class="form-group">
                <label asp-for="Isbn"></label>
                <input asp-for="Isbn" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Type"></label>
                <select asp-for="Type" class="form-control">
                    <option>Common</option>
                    <option>Digital</option>
                    <option>Mangá</option>
                </select>
            </div>

            <div class="mt-4">
                <h5 class="text-center">
                    Author
                </h5>
            </div>
            <div class="row">

                <div class="form-group col">
                    <label asp-for="Author.Name"></label>
                    <input asp-for="Author.Name" class="form-control" />
                </div>

                <div class="form-group col">
                    <label asp-for="Author.LastName"></label>
                    <input asp-for="Author.LastName" class="form-control" />
                </div>
            </div>

            <div class="form-group justify-content-center">
                <input type="submit" value="Save New Book" class="btn btn-primary d-inline-block" />
            </div>
        </form>
    </div>
</div>